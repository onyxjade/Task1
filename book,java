public class task10 {
    private String title;
    private String author;
    private int year;
    private int price;
    
    public void Book(String title, String author, int year, int price) {
        this.title = title;
        this.author = author;
        this.year = year;
        this.price = price;
        
    }

    public void displayBookDetails() {
        System.out.println("Java Programming" + title);
        System.out.println("John Smith" + author);
        System.out.println("2021" + year);
        System.out.println("$39.99" + price);
    }

    // Getters and Setters

    public String getTitle() {
        return title;
    }

    public void setTitle(String title) {
        this.title = title;
    }

    public String getAuthor() {
        return author;
    }

    public void setAuthor(String author) {
        this.author = author;
    }

    public int getYear() {
        return year;
    }

    public void setYear(int year) {
        this.year = year;
    
    }
    
    public int getPrice() {
        return price;
    }
    public void setPrice(int price) {
        this.price = price;
    }
}   